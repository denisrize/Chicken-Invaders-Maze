<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>

<?import View.MazeDisplayer?>
<BorderPane style="-fx-background-image: url('Images/world.jpg')" fx:id="MainBorderPane" onMouseClicked="#mouseClicked" stylesheets="@MainStyle.css" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/18" fx:controller="View.MyViewController">
    <left>
        <VBox prefHeight="200.0" prefWidth="178.0" spacing="5.0" BorderPane.alignment="CENTER">
            <children>
                <GridPane minHeight="200.0" minWidth="200.0">
                    <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                    </rowConstraints>
                    <Label text="Maze rows:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                    <Label text="Maze columns:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                    <TextField fx:id="textField_mazeRows" text="10" GridPane.columnIndex="1" GridPane.rowIndex="0" />
                    <TextField fx:id="textField_mazeColumns" text="10" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                    <Button minWidth="200.0" onAction="#generateMaze" prefHeight="25.0" prefWidth="167.0" text="Start Game" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.hgrow="NEVER" GridPane.rowIndex="2" GridPane.vgrow="NEVER" />
                    <Button disable="true" fx:id="solveBtn" cancelButton="true" minWidth="200.0" onAction="#solveMaze" prefHeight="25.0" prefWidth="167.0" text="Help Me Solve" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.rowIndex="3" />

                </GridPane>
            </children>
            <padding>
                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
            </padding>
         <BorderPane.margin>
            <Insets left="10.0" top="10.0" />
         </BorderPane.margin>
        </VBox>
    </left>
    <bottom>
        <HBox BorderPane.alignment="CENTER">
            <children>
                <Label text="Status bar" />
            </children>
        </HBox>
    </bottom>
    <top>
        <VBox BorderPane.alignment="CENTER">
            <children>
                <MenuBar style="-fx-background-color: lightblue">
                    <menus>
                        <Menu mnemonicParsing="false" text="File">
                            <items>
                                <MenuItem mnemonicParsing="false" onAction="#generateMaze" text="New" />
                            </items>
                            <items>
                                <MenuItem  mnemonicParsing="false" onAction="#popUpSaveName" text="Save" />
                            </items>
                            <items>
                                <MenuItem mnemonicParsing="false" onAction="#popUpLoadName" text="Load" />
                            </items>
                        </Menu>
                        <Menu mnemonicParsing="false" text="Options">
                            <items>
                                <MenuItem mnemonicParsing="false" text="Properties" onAction="#popUpProperties" />
                            </items>
                        </Menu>
                        <Menu mnemonicParsing="false" fx:id="Exit"  >
                        </Menu>
                        <Menu mnemonicParsing="false" fx:id="Help">
                        </Menu>
                        <Menu mnemonicParsing="false" fx:id="About">
                        </Menu>
                    </menus>
                </MenuBar>
            </children>
        </VBox>
    </top>
    <center>
        <Pane  fx:id="centerPane" maxHeight="800.0" maxWidth="800.0" minHeight="400.0" minWidth="400.0" prefHeight="560.0" prefWidth="560.0"  BorderPane.alignment="CENTER">
              <children>
                  <Pane fx:id="container" maxHeight="800.0" maxWidth="800.0" minHeight="400.0" minWidth="400.0" prefHeight="560.0" prefWidth="560.0">
                  <MazeDisplayer  fx:id="mazeDisplayer"  height="400.0" imageFileNamePlayer="Resources/Images/spaceCraft.png" imageFileNameSolveSign="Resources/images/egg.png" imageFileNameTarget="Resources/images/Lord.png" imageFileNameWall="Resources/images/chicken.png" onKeyPressed="#playerMovement" width="400.0" />
                  </Pane>
              </children>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
         <BorderPane.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </BorderPane.margin>
        </Pane>
    </center>
</BorderPane>
